<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Homepage' }) %>

  <body style="background-color: snow">
    <%- include('../partials/navbar-user') %>
      <br>
      <br>
      <br>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-12 col-sm-12">
            <h2><%= detailTutorial.tutorial_name %></h2><br>
            <p><%= detailTutorial.description %></p>
            <% if(detailTutorial.id === 1) { %>
              <a href="/course/<%= courseId %>" class="btn btn-primary">Back to Menu</a>
              <a href="/course/<%= courseId %>/tutorial/<%= detailTutorial.id + 1 %>" class="btn btn-primary">Next</a>
            <% } else { %>
              <a href="/course/<%= courseId %>/tutorial/<%= detailTutorial.id - 1 %>" class="btn btn-primary">Previous</a>
              <% if(detailTutorial.id === lastId) { %>
                <a href="/course/<%= courseId %>" class="btn btn-primary">Back to menu</a>
              <% } else { %>
                <a href="/course/<%= courseId %>/tutorial/<%= detailTutorial.id + 1 %>" class="btn btn-primary">Next</a>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
      <%- include('../partials/script') %>
      <%- include('../partials/footer') %>
  </body>

</html>